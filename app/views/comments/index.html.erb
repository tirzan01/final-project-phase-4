<h1><%= @post.user.user_name %></h1>

<h2><%= @post.content %></h2>

<% @comments.each do |comment| %>
  <div>
    <h3><%= comment.content %></h3>
    <h5><%= render partial: 'comment_like', locals: { comment: comment } %></h5>
    <h5><%= render partial: 'comment_replies', locals: { comment: comment } %></h5>
  </div>
<% end %>